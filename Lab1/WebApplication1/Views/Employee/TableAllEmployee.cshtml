    <script>

        //define connection
        con = new signalR.HubConnectionBuilder().withUrl("/AddEmployee").build();

        //start connection
        con.start();
       
        con.start();

        function submitForm()
        {
            var name = document.getElementById("name").value;
            var address = document.getElementById("address").value;
            var age = parseInt(document.getElementById("age").value);
            console.log("Adding employee:", name, address, age);

            con.invoke("addemployee", name, address, age); // Call hub method to add employee
            console.log("Adding employee:", name, address, age);

            return false;
        }

    </script>
}